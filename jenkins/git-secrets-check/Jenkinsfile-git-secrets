library("tdr-jenkinslib")

pipeline {
    agent {
        label "master"
    }

    stages {
        stage("Run git secrets") {
            steps {
                script {
                    dir("jenkins/git-secrets-check") {
                        def exitCode = sh(script: "git-secrets --scan", returnStatus: true)
                        def scanOutput = sh(script: "git-secrets --scan test 2>&1 >/dev/null | head -n 3 | tr -d '\n'", returnStdout: true)
                        if(exitCode == 0 || scanOutput != "test:3:Access Key = AKIAICKMZTVXEHBPKCYAtest:5:Secret Key = jSaq0m8vZpuSLaRn42zydi/wcfkLiyuZM+XCL0ootest:7:Account Id = 679593333241") {
                            tdr.postToDaTdrSlackChannel(colour: "danger",
                                    message: "*Git secrets check failed* :"
                            )
                        }
                    }
                }
            }
        }
    }
}
